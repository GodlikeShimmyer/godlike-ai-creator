{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,                
    "noUnusedParameters": false,           
    "skipLibCheck": true,                  
    "allowJs": true,                       
    "noUnusedLocals": false,               
    "strictNullChecks": false,             
    "target": "ESNext",                    
    "module": "ESNext",                    
    "moduleResolution": "Node",            
    "esModuleInterop": true,               
    "jsx": "react",                         
    "declaration": false,                      
    "outDir": "./dist",                      
    "resolveJsonModule": true,               
    "lib": ["DOM", "ESNext"],             
    "strict": true,                          
    "types": ["node", "@types/vercel__node"],  
    "skipDefaultLibCheck": true               
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
